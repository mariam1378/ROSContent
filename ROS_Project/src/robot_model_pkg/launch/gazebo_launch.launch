<launch>
  <!-- Load the URDF into the parameter server -->
  <arg name="model" default="$(find robot_model_pkg)/urdf/three_wheeled_robot.urdf"/>
  <param name="robot_description" command="$(find xacro)/xacro $(arg model)"/>
 <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>

  <!-- Start Gazebo and load the world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>

  <!-- Spawn the robot in Gazebo -->
  <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" output="screen" args="-param robot_description -urdf -model three_wheeled_robot -z 0.1" />
</launch>

